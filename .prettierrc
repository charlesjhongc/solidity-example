{
    "printWidth": 100,
    "tabWidth": 4,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "overrides": [
        {
            "files": ["*.json", "*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.sol"],
            "options": {
                "printWidth": 160,
                "semi": true
            }
        }
    ]
}
